@using TallerMecanico.Models.ViewModels;
@model RolVm
@{
    ViewData["Title"] = "Insertar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<div class="div-insertar" style="display: flex; align-items: center;">
    <i class="bi bi-person-fill" style="font-size: 1.5rem; color: #ffff;"></i>
    <h3 style="margin-left: 10px;">Insertar Rol</h3>
</div>

<br>
<br>
<div>

    <form method="post" asp-action="Insertar">
        <div class="row">
            <div class="danger">
                @if (TempData["mensaje"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <p> @TempData["mensaje"] </p>
                        <button class="close" data-dismiss="alert" aria-label="close">
                            <span aria-hidden="true"> &times; </span>
                        </button>
                    </div>
                }
            </div>
        </div>
        <div class="card">
            <div class="form-group">
                <label asp-for="Descripcion" class="custom-control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion2" class="custom-control-label"></label>
                <input asp-for="Descripcion2" class="form-control" />
                <span asp-validation-for="Descripcion2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="insertar" class="btn btn-success" />
                <a class="btn btn-danger" asp-area="" asp-controller="rol" asp-action="index">cancelar</a>

            </div>
        </div>
    </form>

</div>

