@using TallerMecanico.Models.ViewModels
@model VehiculoMecanicoVm
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="">
    <div class="">
        <form method="post" asp-action="Eliminar">
            <h1>Eliminar</h1>
            <div class="">
                <div class="danger">
                    @if (TempData["mensaje"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible" role="alert">
                            <p>@TempData["mensaje"]</p>
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                </div>
            </div>
             <input asp-for="VehiculoMecanicoId" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Vehiculo.Placa" class=""></label>
                <input asp-for="Vehiculo.Placa" class="form-control" readonly />
                <span asp-validation-for="Vehiculo.Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usuario" class=""></label>
                <input asp-for="Usuario.Nombre" class="form-control" readonly />
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class=""></label>
                <input asp-for="Estado.Nombre" class="form-control" readonly />
                <span asp-validation-for="Estado.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diagnostico" class=""></label>
                <input asp-for="Diagnostico" class="form-control" readonly />
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class=""></label>
                <input asp-for="Comentario" class="form-control" readonly />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <td><input type="submit" value="Eliminar" class="btn btn-warning" /></td>
            </div>

        </form>
    </div>

</div>
