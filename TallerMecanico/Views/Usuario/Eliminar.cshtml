@using TallerMecanico.Models.ViewModels;
@model UsuarioVm
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br>
<br>
<div class="div-insertar" style="display: flex; align-items: center;">
    <i class="bi bi-person-fill" style="font-size: 1.5rem; color: #ffff;"></i>
    <h3 style="margin-left: 10px;">Eliminar usuario</h3>
</div>

<br>
<br>
<div>
    <form method="post" asp-action="Eliminar">
        <div class="row">
            <div class="danger">
                @if (TempData["mensaje"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <p> @TempData["mensaje"] </p>
                        <button class="close" data-dismiss="alert" aria-label="close">
                            <span aria-hidden="true"> &times; </span>
                        </button>
                    </div>
                }
            </div>
        </div> 
        <div class="card div-eliminar ">
        <input asp-for="UsuarioId" type="hidden" class="form-control" />
        <input asp-for="Password" readonly type="hidden" class="form-control" />
        <div class="form-group">
            <label asp-for="Nombre" class="control-label"></label>
            <input asp-for="Nombre" readonly class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Apellido" class="control-label"></label>
            <input asp-for="Apellido" readonly class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Correo" class="control-label"></label>
            <input asp-for="Correo" readonly class="form-control" />
            <span asp-validation-for="Correo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-success" />
            <a class="btn btn-danger" asp-area="" asp-controller="Usuario" asp-action="Index">Cancelar</a>

        </div>
        </div>
    </form>
</div>
